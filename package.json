{
  "name": "event-storming-tool",
  "version": "0.1.0",
  "description": "DDD Event Storming Tool with Hexagonal Architecture",
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:domain": "vitest run tests/domain",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "9.26.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^1.0.4"
  }
}
